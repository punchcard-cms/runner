{
  "name": "punchcard-runner",
  "version": "2.1.2",
  "description": "A set of Gulp tasks to ease development of Node projects",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "pretest": "npm run lint",
    "test": "npm run nyc",
    "lint": "eslint index.js lib tasks && eslint -c ./.eslintrc-ava.yml tests",
    "nyc": "nyc --all npm run ava",
    "ava": "ava | tap-diff",
    "ava:watch": "ava --watch | tap-diff",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:punchcard-cms/runner.git"
  },
  "keywords": [
    "gulp",
    "punchcard-cms"
  ],
  "author": "Sam Richard <snugug@us.ibm.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "browser-sync": "^2.12.3",
    "del": "^2.2.0",
    "eslint-config-punchcard": "^1.0",
    "eyeglass": "^0.8.3",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^3.1.0",
    "gulp-eslint": "^2.0.0",
    "gulp-if": "^2.0.0",
    "gulp-imagemin": "^3.0.1",
    "gulp-nodemon": "^2.0.6",
    "gulp-sass": "^2.2.0",
    "gulp-sass-lint": "^1.1.1",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-task-listing": "^1.0.1",
    "merge": "^1.2.0",
    "run-sequence": "^1.1.5"
  },
  "devDependencies": {
    "ava": "^0.14.0",
    "coveralls": "^2.11.9",
    "eslint": "^3.4.0",
    "nyc": "^6.4.0",
    "tap-diff": "^0.1.1"
  },
  "nyc": {
    "exclude": [
      "tests/**/*",
      "tasks/**/*",
      "Gulpfile.js",
      "index.js"
    ]
  },
  "ava": {
    "files": [
      "tests/**/*.js"
    ],
    "failFast": true,
    "tap": true
  }
}
